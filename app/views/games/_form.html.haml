= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :avatar
    = f.file_field :avatar

  .actions
    = f.submit 'Save'
